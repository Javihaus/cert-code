+"""Utility functions for the application."""
+
+from typing import TypeVar, Callable
+
+T = TypeVar("T")
+
+
+def add(a: int, b: int) -> int:
+    """Add two integers together.
+
+    Args:
+        a: First integer
+        b: Second integer
+
+    Returns:
+        Sum of a and b
+    """
+    return a + b
+
+
+def identity(x: T) -> T:
+    """Return the input unchanged."""
+    return x
+
